{
  "extends": ["eslint:recommended","plugin:jasmine/recommended"],

  "parser": "babel-eslint",

  "plugins": ["prettier","jasmine"],

  "parserOptions": {
    "sourceType": "module",
    "ecmaVersion": 9
  },

  "env": {
    "jasmine": true,
    "browser": true,
    "node": true,
    "es6": true
  },

  "rules": {
    "prettier/prettier": "warn",
    "no-unused-vars": "off",
    "quotes": ["warn", "single", {
      "avoidEscape": true,
      "allowTemplateLiterals": true
    }],
    "semi": ["warn", "always", {
      "omitLastInOneLineBlock": true
    }]
  }
}